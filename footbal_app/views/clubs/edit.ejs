<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Club Data</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <body class="container-fluid">
        <nav class="navbar navbar-dark bg-primary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Edit Club Data</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/players">Players</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/clubs">Clubs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/leagues">Leagues</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/agents">Agents</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/coaches">Coaches</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <h3>Edit Club Data in the Database</h3>

          <form class="mt-5" action="/clubs/edit/<%= club._id %>" method="post">
            <div class="mb-3">
              <label for="name" class="form-label">Name of the club</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= club.name %>">
            </div>
      
            <div class="mb-3">
              <label for="players" class="form-label">Players in the club</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= club.players %>">
            </div>

            <div class="mb-3">
              <label for="year" class="form-label">Year</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= club.year %>">
            </div>

            <div class="mb-3">
              <label for="town" class="form-label">Town</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= club.town %>">
            </div>

            <div class="mb-3">
              <label for="country" class="form-label">Country</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= club.country %>">
            </div>

            <div class="form-group mb-3">
              <label for="league">League</label>
              <select class="form-control" id="league" name="league">
                <% if (club.league) { %>
                  <% leagues.forEach(league => { %>
                    <% if (league._id.equals(club.league._id)) { %>
                      <option selected value="<%= league._id %>"><%= league.name %></option>
                    <% } else { %>
                      <option value="<%= league._id %>"><%= league.name %></option>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <option value="">Choose a league</option>
                  <% leagues.forEach(league => { %>
                    <option value="<%= league._id %>">
                      <%= league.name %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <div class="form-group mb-3">
              <label for="coach">Coach</label>
              <select class="form-control" id="coach" name="coach">
                <% if (club.coach) { %>
                  <% coaches.forEach(coach => { %>
                    <% if (coach._id.equals(club.coach._id)) { %>
                      <option selected value="<%= coach._id %>"><%= coach.first_name+' '+coach.last_name %></option>
                    <% } else { %>
                      <option value="<%= coach._id %>"><%= coach.first_name+' '+coach.last_name %></option>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <option value="">Choose a coach</option>
                  <% coaches.forEach(coach => { %>
                    <option value="<%= coach._id %>">
                      <%= coach.first_name+' '+coach.last_name %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>
      
            <button class="btn btn-success" type="submit">Update Club data</button>
          </form>
          
     

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
