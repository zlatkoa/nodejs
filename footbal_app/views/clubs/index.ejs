<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Clubs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <body class="container-fluid">
      <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Clubs</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/players">Players</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/clubs">Clubs</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/leagues">Leagues</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <h3 class="mt-5">Clubs</h3>
      <a class="btn btn-primary mt-5" href="/clubs/create">Add new Club to the list</a>
      <table class="table table-striped table-hover table-responsive mt-5">
        <thead>
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">Name of the club</th>
            <th scope="col">Players</th>
            <th scope="col">Year</th>
            <th scope="col">Town</th>
            <th scope="col">Country</th>
            <th scope="col">League</th>
            <th scope="col">Coaches</th>
          </tr>
        </thead>
        <tbody>
          <% clubs.forEach(club => { %>
            <tr>
              <th scope="row">
                <a href="/clubs/<%= club._id %>"><%= club._id %></a>
              </th>
              <td><%= club.name %></td>
              <td><%= club.players %></td>
              <td><%= club.year %></td>
              <td><%= club.town %></td>
              <td><%= club.country %></td>
              <td><%= club.leagues %></td>
              <td><%= club.coaches.first_name+' '+club.coaches.last_name %></td>
              <td>
                    <form action="/clubs/delete/<%= club._id %>" method="post">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>  Delete club</button>
                    </form>
                </td>              
            </tr>
          <% }) %>
        </tbody>
      </table>   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
