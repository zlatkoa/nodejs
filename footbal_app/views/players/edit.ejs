<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>The Footbal player's Homepage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <body class="container-fluid">
        <nav class="navbar navbar-dark bg-primary">
            <div class="container-fluid">
              <a class="navbar-brand" href="#">Edit player</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/players">Players</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/clubs">Clubs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/leagues">Leagues</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/agents">Agents</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/coaches">Coaches</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
          <h3>Edit Player in the DataBase</h3>

          <form class="mt-5" action="/players/edit/<%= player._id %>" method="post">
            <div class="mb-3">
              <label for="first_name" class="form-label">First Name</label>
              <input type="text" name="first_name" class="form-control" id="first_name" value="<%= player.first_name %>">
            </div>
      
            <div class="mb-3">
              <label for="last_name" class="form-label">Last Name</label>
              <input type="text" name="last_name" class="form-control" id="last_name" value="<%= player.last_name %>">
            </div>

            <div class="mb-3">
              <label for="position" class="form-label">Position</label>
              <input type="text" name="position" class="form-control" id="position" value="<%= player.position %>">
            </div>

            <div class="mb-3">
              <label for="birth_date" class="form-label">Birth Date</label>
              <input type="text" name="birth_date" class="form-control" id="birth_date" value="<%= player.birth_date%>">
            </div>

            <div class="form-group mb-3">
              <label for="club">Club</label>
              <select class="form-control" id="club" name="club">
                <% if (player.club) { %>
                  <% clubs.forEach(club => { %>
                    <% if (club._id.equals(player.club._id)) { %>
                      <option selected value="<%= club._id %>"><%= club.name %></option>
                    <% } else { %>
                      <option value="<%= club._id %>"><%= club.name %></option>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <option value="">Choose a club</option>
                  <% clubs.forEach(club => { %>
                    <option value="<%= club._id %>">
                      <%= club.name %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>

            <div class="form-group mb-3">
              <label for="agent">Agent</label>
              <select class="form-control" id="club" name="agent">
                <% if (player.agent) { %>
                  <% agents.forEach(agent => { %>
                    <% if (agent._id.equals(player.agent._id)) { %>
                      <option selected value="<%= agent._id %>"><%= agent.first_name+' '+agent.last_name %></option>
                    <% } else { %>
                      <option value="<%= agent._id %>"><%= agent.first_name+' '+agent.last_name %></option>
                    <% } %>
                  <% }) %>
                <% } else { %>
                  <option value="">Choose Agent</option>
                  <% agents.forEach(agent => { %>
                    <option value="<%= agent._id %>">
                      <%= agent.name %>
                    </option>
                  <% }) %>
                <% } %>
              </select>
            </div>
      
            <button class="btn btn-success" type="submit">Edit Player</button>
          </form>
          
     

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
