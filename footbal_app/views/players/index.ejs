<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Players</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <body class="container-fluid">
      <nav class="navbar navbar-dark bg-primary">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Players</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/players">Players</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/clubs">Clubs</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/leagues">Leagues</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <h3 class="mt-5">Players</h3>
      <a class="btn btn-primary mt-5" href="/players/create">Add new Player to the list</a>
      <table class="table table-striped table-hover table-responsive mt-5">
        <thead>
          <tr>
            <th scope="col">#ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Position</th>
            <th scope="col">Birth date</th>
            <th scope="col">Club</th>
            <th scope="col">Agent</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% players.forEach(player => { %>
            <tr>
              <th scope="row">
                <a href="/players/<%= player._id %>"><%= player._id %></a>
              </th>
              <td><%= player.first_name %></td>
              <td><%= player.last_name %></td>
              <td><%= player.position %></td>
              <td><%= player.birth_date %></td>
              <td><%= player.club %></td>
              <td><%= player.agent %></td>
              <td>
                <form action="/players/delete/<%= player._id %>" method="post">
                  <button type="submit" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>  Delete player</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
